---
import Layout from '../layouts/Layout.astro'
export const title = "Andrew N"
---

<Layout {title}>
    <h1 class="heading">Andrew Nijmeh</h1>

    <p>
        <a href="https://twitter.com/nijmehvm" class="link">Twitter</a>
        <a href="mailto:andrew@nijmeh.world" class="link">Mail</a>
        <a href="https://www.linkedin.com/in/andrew-nijmeh-1a6726200/" class="link">Linkedin</a>
    </p>

    <p>software engineering, infra & systems.</p>

    <audio autoplay id="myAudio">
        <source src="./audio.mp3" type="audio/mpeg">
        Your browser does not support the audio element.
    </audio>
</Layout>

<style>
    .heading {
        color: #1c1c1b;
        font-size: 24px;
        margin-top: 50px;
        margin-bottom: 10px;
        margin-left: 3%;
    }

    p {
        color: #1c1c1b;
        max-width: 60ch;
        margin-left: 3%;
        margin-bottom: 20px;
        line-height: 1.8em;
        display: auto;
    }

    .link {
        color: #e0b02a;
        text-decoration: none;
    }

    .link:hover {
        color: white;
        background-color: #e0b02a;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const audio = document.getElementById("myAudio") as HTMLAudioElement;

        if (audio) {
            // Listen for the "ended" event and pause the audio
            audio.addEventListener("ended", function() {
                audio.pause();
            });
        }
    });
</script>