---
import Layout from '../layouts/Layout.astro';
import {TechItem} from "../components/TechItem";
import {
    SiDocker,
	SiKubernetes,
    SiGit,
    SiRust,
    SiNextdotjs as SiNextJs,
    SiNodedotjs as SiNodeJs,
    SiPostgresql,
    SiReact,
    SiTailwindcss as SiTailwindCSS,
    SiTypescript,
    SiJavascript,
    SiPython,
    SiPrisma,
} from "react-icons/si/index.js";
---

<Layout title="Andrew Nijmeh">
	<main>
		
		<h1 class="mt-5 font-bold text-left text-4xl md:text-5xl mb-4">hey, I'm Andrew.</h1>
		<br><p class="text-white-800 dark:text-gray-300 leading-6 tracking-wide mb-12">
			I'm a 14 year old <a href="https://en.wikipedia.org/wiki/Hacker_culture#Definition">hacker</a> & software engineer from Toronto. I am passionate about software engineering,
			cloud, infrastructure & bitcoin.</p>
			
		<h3 class="font-medium text-3xl mb-4">Technologies ðŸ’»</h3>
		<div class="w-full flex flex-wrap flex-row justify-center p-1 border border-slate-800 rounded-md bg-white/10 dark:bg-blue/10 mb-12">
			<TechItem icon={SiTypescript} name="TypeScript" />
			<TechItem icon={SiReact} name="React" />
			<TechItem icon={SiKubernetes} name="Kubernetes" />
			<TechItem icon={SiNodeJs} name="Node" />
			<TechItem icon={SiJavascript} name="JavaScript" />
			<TechItem icon={SiNextJs} name="Next" />
			<TechItem icon={SiTailwindCSS} name="TailwindCSS" />
			<TechItem icon={SiPrisma} name="Prisma" />
			<TechItem icon={SiPostgresql} name="Postgres" />
			<TechItem icon={SiGit} name="Git" />
