---
import Layout from '../layouts/Layout.astro';
const posts = (await Astro.glob('./blog/*.{md,mdx}')).sort(
	(a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);
---
<Layout title="Andrew Nijmeh">
	<head>
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
			ul li {
				display: flex;
			}
			ul li time {
				flex: 0 0 130px;
				font-style: italic;
				color: #595959;
			}
			ul li a:visited {
				color: #8e32dc;
			}

			h1 {
       		 	color: #ccc;
        		text-align: center;
        		margin-bottom: 2rem;
        		margin-top: 20px;
        		height: min-content
    		}

    		h2 {
        		color: #ccc;
        		margin-top: 20px;
    		}

    		h3 {
        		color: #ccc;
        		margin-bottom: 10;
        		white-space: pre;
    		}

    		main {
        		margin: 0 auto;
        		padding: 1em;
        		max-width: 60ch;
    		}	
    
    		p {
          		color: #ccc;
          		max-width: 60ch;
          		margin-top: 0px;
    		}

		</style>
	</head>
	<body>
		<main>
			<section>
				<ul>
					{posts.map((post) => (
						<li>
							<time datetime={post.frontmatter.pubDate}>
								{new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
									year: 'numeric',
									month: 'short',
									day: 'numeric',
								})}
							</time>
							<a href={post.url}>{post.frontmatter.title}</a>
						</li>
					))}
				</ul>
			</section>
		</main>
	</body>
</Layout>
